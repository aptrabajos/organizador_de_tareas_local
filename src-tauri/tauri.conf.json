{
  "productName": "Gestor de Proyectos",
  "version": "0.2.1",
  "identifier": "com.gestor.proyectos",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Gestor de Proyectos",
        "label": "main",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window with full filesystem access",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "shell:allow-open",
            "dialog:allow-open",
            "dialog:default",
            {
              "identifier": "fs:default",
              "allow": [
                { "path": "$HOME/**" },
                { "path": "/mnt/**" },
                { "path": "/tmp/**" },
                { "path": "/home/**" }
              ]
            },
            {
              "identifier": "fs:allow-read",
              "allow": [
                { "path": "$HOME/**" },
                { "path": "/mnt/**" },
                { "path": "/tmp/**" },
                { "path": "/home/**" }
              ]
            },
            {
              "identifier": "fs:allow-write",
              "allow": [
                { "path": "$HOME/**" },
                { "path": "/mnt/**" },
                { "path": "/tmp/**" },
                { "path": "/home/**" }
              ]
            },
            "fs:allow-exists"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "es-ES",
        "template": null,
        "fragmentPaths": [],
        "componentRefs": [],
        "featureGroupRefs": [],
        "featureRefs": [],
        "mergeRefs": [],
        "bannerPath": null,
        "dialogImagePath": null
      },
      "nsis": {
        "license": null,
        "installerIcon": null,
        "headerImage": null,
        "sidebarImage": null,
        "displayLanguageSelector": true,
        "languages": ["es-ES", "en-US"]
      }
    }
  },
  "plugins": {}
}
